{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Updated to react-jsx for React 17+ compatibility
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Ensure baseUrl is the project root
    "paths": {
      "@/*": [
        "src/*"
      ] // Resolve '@' to 'src'
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*", // Include the 'src' folder
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
